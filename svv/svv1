# esempi useradd

sudo useradd -s "/bin/bash" -d "/srv/sv1" -mU sv1
sudo usermod --groups sv1,sudo sv1
sudo passwd sv1
# sv1

sudo groups sv1
# sv1 : sv1 sudo

cat /etc/group | grep sv1
# sudo:x:27:ubuntu,sv1
# sv1:x:1001:sv1

sudo passwd -S sv1
# sv1 P 08/04/2015 0 99999 7 -1

ls -la /srv/sv1/ | sed 's/^/# /'
