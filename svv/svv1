# Tabella partizioni

sudo lsblk
# NAME   MAJ:MIN RM   SIZE RO TYPE MOUNTPOINT
# sda      8:0    0    10G  0 disk 
# └─sda1   8:1    0    10G  0 part /
# sdb      8:16   0    10G  0 disk 
# sdc      8:32   0    10G  0 disk 
# sdd      8:48   0    10G  0 disk 
# sr0     11:0    1  1024M  0 rom  
sudo fdisk -l

# Nessuna partizione di swap
free
cat /proc/swaps

# partizione swap
sudo fdisk /dev/sdb
